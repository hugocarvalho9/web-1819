extends layout
block content
	.w3-container
		.w3-card-4
			header.w3-container.w3-teal
				h3 Submissão de Ficheiros
			.w3-container
				form.w3-container(action='/processaForm' method='POST' enctype='multipart/form-data')
					label.w3-teal
						b Ficheiro
					input.w3-input.w3-border.w3-light-grey(type='file' name='ficheiro')
					label.w3-teal
						b Descrição
					input.w3-input.w3-border.w3-light-grey(type='text' name='desc')
					input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
				br
				table.w3-table-all
					caption 
						h3 Lista de Submissões
					tr
						th Nome
						th Path
						th Descrição
						th Data
						th Hora
					each f in lista
						tr
							td= f.nome
							td 
								a(href=f.path)=f.path
							td= f.desc
							td= f.data
							td= f.hora
			footer.w3-container.w3-teal
				address Gerado por FileUploadApp