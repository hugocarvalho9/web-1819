extends layout
block content
	.w3-container
		.w3-card-4
			header.w3-container.w3-teal
				h3 Lista de Ficheiros
			.w3-container
				table.w3-table-all
					caption 
						h3 Lista de Ficheiros
					tr
						th Nome
						th Path
						th Descrição
						th Data
						th Hora
					each f in lista
						tr
							td= f.nome
							td 
								a(href=f.path)=f.path
							td= f.desc
							td= f.data
							td= f.hora
			footer.w3-container.w3-teal
				address Gerado por FileUploadApp:
					a(href='/') Voltar à página principal