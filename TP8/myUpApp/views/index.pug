extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-header.w3-dark-grey
                h3 MyUpApp
            .w3-container
                form.w3-container(id="myUploadForm")
                    fieldset
                    legend Novo Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file',name='ficheiro',id='fich')
                    legend Descrição
                    textarea.w3-input.w3-border.w3-light-grey(id='desc', rows='3', cols='80')
                    br
                    button.w3-button.w3-round-large.w3-black(id='adicionar') Submeter ficheiro
                .w3-container
                    hr
                    table.w3-table-all(id='ficheiros')
                    br
            footer.w3-container.w3-dark-grey
                address Gerado por myUpApp