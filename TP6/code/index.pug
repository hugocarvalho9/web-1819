extends layout
block content
	.w3-container
		.w3-card-4
			header.w3-container.w3-teal
				div.w3-row
					div.w3-col.m6.l11
						p
							h3 Página de tarefas
					div.w3-col.m6.l1
						p
							form.w3-container(action='/registo' method='PUT')
								input.w3-btn.w3-white(type='submit' value='Adicionar')
			.w3-container
					ul.w3.ul
						each tar in lista
							if tar.estado
								li
									table.w3-table-all
										tr
											th.w3-col.m4.l3 Data de Registo
											td.w3-col.m8.l9= tar.dataRegisto
										tr
											th.w3-col.m4.l3 Data de Conclusão
											td.w3-col.m8.l9= tar.dataConclusao
										tr
											th.w3-col.m4.l3 Descrição
											td.w3-col.m8.l9= tar.descricao
										tr
											th.w3-col.m4.l3 Tipo
											td.w3-col.m8.l9= tar.tipo
									p
										form.w3-container
											a(href='/removeTarefa?dataRegisto=' + tar.dataRegisto + '&dataConclusao=' + tar.dataConclusao + '&descricao=' + tar.descricao + '&tipo=' + tar.tipo) Eliminar
			footer.w3-container.w3-teal
				address Gerado por TarefasApp